<Page x:Class="Scanner.Views.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scanner.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Height="30" Text="Manual User" Width="120" FontSize="20" TextAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0"></TextBlock>
        <Border Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Source="/Image/user.png" Width="300" Height="300"/>
                <Rectangle Height="20" Width="50" Margin="-30 -180 0 0" Stroke="Red"></Rectangle>
            </Grid>
        </Border>
    </Grid>
</Page>
