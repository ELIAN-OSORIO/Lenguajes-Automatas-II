                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="75"/>
                    </Grid.RowDefinitions>
                    <Ellipse Width="70" Height="70" Fill="#004E8C"/>
                    <TextBlock Text="SJ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="White"/>
