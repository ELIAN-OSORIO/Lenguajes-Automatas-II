                    <TextBlock Grid.Row="2" Grid.Column="1" Text="osoriosanelian@gmail.com" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontFamily="Calibri"/>
                </Grid>
            </Grid>
        </Border>
